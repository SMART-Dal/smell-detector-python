{
  "Smells": {
    "BrokenHierarchy": {
      "enable": true
    },
    "BrokenModularization": {
      "enable": true,
      "x_references": 5
    },
    "ComplexConditional": {
      "enable": true,
      "threshold": 3
    },
    "ComplexMethod": {
      "enable": true,
      "threshold": 10
    },
    "DeepHierarchy": {
      "enable": true,
      "max_depth": 4
    },
    "DeficientEncapsulation": {
      "enable": true
    },
    "EmptyCatchBlock": {
      "enable": true
    },
    "HubLikeModularization": {
      "enable": true,
      "max_fan_in": 20,
      "max_fan_out": 20
    },
    "ImperativeAbstraction": {
      "enable": true,
      "max_line": 0,
      "threshold": 3
    },
    "InsufficientModularization": {
      "enable": true,
      "max_loc": 300,
      "max_nom": 20,
      "max_nopm": 10,
      "max_wmc": 15
    },
    "LongIdentifier": {
      "enable": true,
      "threshold": 30
    },
    "LongMethod": {
      "enable": true,
      "threshold": 20
    },
    "LongParameterList": {
      "enable": true,
      "threshold": 4
    },
    "LongStatement": {
      "enable": true,
      "threshold": 100
    },
    "MagicNumber": {
      "enable": true
    },
    "MissingDefault": {
      "enable": true
    },
    "MissingHierarchy": {
      "enable": true,
      "max_branches": 3
    },
    "MultifacetedAbstraction": {
      "enable": true,
      "max_lcom4": 1.5,
      "min_methods": 3
    },
    "MultipathHierarchy": {
      "enable": true
    },
    "RebelliousHierarchy": {
      "enable": true
    },
    "UnexploitedEncapsulation": {
      "enable": true
    },
    "UnnecessaryAbstraction": {
      "enable": true,
      "max_fields": 1,
      "max_methods": 1,
      "min_method_loc": 5
    },
    "UnutilizedAbstraction": {
      "enable": true
    },
    "WideHierarchy": {
      "enable": true,
      "threshold": 5
    }
  },
  "skip_directories": {
    "names": ["test", "tests", "build", "venv", "dist"],
    "patterns": ["^.*cache$", "^temp.*", "(?i)\\btest_.*", "(?i).*_test\\b"]
  }
}
